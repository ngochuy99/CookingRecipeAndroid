<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">
    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/title_icon"
        android:id="@+id/loginImageView"
        app:layout_constraintVertical_bias="0.07"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:textColor="@color/orange"
        android:id="@+id/loginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/lato_black"
        android:gravity="center"
        android:text="Cooking MaMa"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/loginImageView" />

    <EditText
        android:paddingLeft="10dp"
        android:hint="Email"
        android:background="@color/white"
        android:inputType="text"
        android:id="@+id/register_email"
        app:layout_constraintVertical_bias="0.15"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginTitle" />

    <EditText
        android:paddingLeft="10dp"
        android:hint="Display Name"
        android:background="@color/white"
        android:inputType="text"
        android:id="@+id/register_displayname"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email" />

    <EditText
        android:paddingLeft="10dp"
        android:hint="Password"
        android:background="@color/white"
        android:inputType="textPassword"
        android:id="@+id/register_password"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_displayname" />

    <EditText
        android:paddingLeft="10dp"
        android:hint="Repeat Password"
        android:background="@color/white"
        android:inputType="textPassword"
        android:id="@+id/re_register_password"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password" />

    <TextView
        android:id="@+id/error"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_register_password" />

    <Button
        android:backgroundTint="@color/gray"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:fontFamily="@font/lato_regular"
        android:text="Register"
        android:textSize="25dp"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_register_password"/>

</androidx.constraintlayout.widget.ConstraintLayout>